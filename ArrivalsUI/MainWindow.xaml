<Window x:Class="ArrivalsUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArrivalsUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="816" Width="1280">

    <Window.Resources>
        <local:TimeConverter x:Key="TimeConverter" />
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="7*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>


        <TreeView x:Name="StationBrowser" SelectedItemChanged="TreeView_SelectedItemChanged"
                  ItemsSource="{Binding TflLines}" Grid.Column="0" Grid.Row="0">
            <TreeView.ItemTemplate>
                <HierarchicalDataTemplate ItemsSource="{Binding Stations}">
                    <TextBlock Text="{Binding Line}" FontSize="18" />
                    <HierarchicalDataTemplate.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Name}" FontSize="16" />
                        </DataTemplate>
                    </HierarchicalDataTemplate.ItemTemplate>
                </HierarchicalDataTemplate>
            </TreeView.ItemTemplate>
        </TreeView>

        <ScrollViewer VerticalScrollBarVisibility="Auto"  Grid.Column="1" Grid.Row="0">
            <ItemsControl x:Name="ArrivalsView" Background="Black"
                      ItemsSource="{Binding Arrivals}" Grid.Column="1" Grid.Row="0">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <GroupBox Header="{Binding PlatformName}" Margin="5"
                               Foreground="White" BorderBrush="DarkGray" FontWeight="Bold">
                            <ItemsControl ItemsSource="{Binding Predictions}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="2">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Text="{Binding DestinationName}" Grid.Column="0" Grid.Row="0"
                                                   FontFamily="Consolas" FontSize="16" FontWeight="Bold"
                                                   Foreground="#FFFF00"/>
                                            <StackPanel Orientation="Horizontal"  VerticalAlignment="Center" Margin="2"
                                                    Grid.Column="1" Grid.Row="0">
                                                <TextBlock Text="{Binding TimeToStation, Converter={StaticResource TimeConverter}}" 
                                                   FontFamily="Consolas" FontSize="16" FontWeight="Bold" Foreground="#FFFF00" />
                                                <TextBlock Text=" min"  
                                                   FontFamily="Consolas" FontSize="16" FontWeight="Bold" Foreground="#FFFF00"/>
                                            </StackPanel>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </GroupBox>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

        </ScrollViewer>

    </Grid>
</Window>
